<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/tapDashX1.5"
    android:gravity="center_horizontal"
    android:layout_marginBottom="@dimen/tapDashX1.5"
    android:background="@drawable/connectable_rv_bg"
    android:padding="1dp">

    <ImageView
        android:id="@+id/listItemRecentIconIv"
        android:layout_width="@dimen/iconPairListSize"
        android:layout_height="@dimen/iconPairListSize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/tapDashX1"
        android:layout_marginStart="@dimen/tapDashX2"
        android:layout_marginEnd="@dimen/tapDashX2"
        android:src="@drawable/side_m" />

    <TextView
        android:id="@+id/listItemRecentTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listItemRecentIconIv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/pretendardvariable"
        android:gravity="center"
        android:text="BS-100"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/textDashH1" />

    <TextView
        android:id="@+id/listItemRecentNumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listItemRecentTitleTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/tapDashX0.5"
        android:fontFamily="@font/pretendardvariable"
        android:gravity="center"
        android:text="(1505)"
        android:textAllCaps="false"
        android:textColor="@color/statusUnitText"
        android:textSize="13sp" />

</RelativeLayout>