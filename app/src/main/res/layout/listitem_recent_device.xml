<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="112dp"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="1dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/listItemRecentIconIv"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/side_m" />

    <TextView
        android:id="@+id/listItemRecentTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listItemRecentIconIv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendardvariable"
        android:gravity="center"
        android:text="BS-100"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/listItemRecentNumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listItemRecentTitleTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/pretendardvariable"
        android:gravity="center"
        android:text="(1505)"
        android:textAllCaps="false"
        android:textColor="@color/statusUnitText"
        android:textSize="11sp" />

</RelativeLayout>