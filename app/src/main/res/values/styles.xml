<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomCardContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">@dimen/tapDashX0.5</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:background">@drawable/topframe_outline</item>
    </style>

    <style name="BottomCardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/tapDashX1.5</item>
        <item name="android:layout_marginTop">@dimen/tapDashX1.5</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:textColor">@color/textColorMain</item>
        <item name="android:textSize">@dimen/textDashH2</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BottomCardLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/tapDashX5</item>
        <item name="android:layout_marginBottom">@dimen/tapDashX5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/progressGood</item>
        <item name="android:textSize">@dimen/textDashH1</item>
        <item name="android:visibility">visible</item>
        <item name="android:text">@string/loading_data</item>
    </style>

    <style name="BottomCardIndex">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/tapDashX1.5</item>
        <item name="android:layout_marginTop">@dimen/iconDashPadding</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">null</item>
        <item name="android:textColor">@color/progressGood</item>
        <item name="android:textSize">@dimen/textDashH2</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BottomCardGrade">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">@dimen/tapDashX5.5</item>
        <item name="android:layout_marginEnd">@dimen/tapDashX1.5</item>
        <item name="android:layout_marginBottom">@dimen/tapDashX1.5</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:text">@string/error</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/statusUnitText</item>
        <item name="android:textSize">@dimen/textDashH5</item>
        <item name="android:visibility">gone</item>
        <item name="sort">grade</item>
    </style>

    <style name="BottomCardUnit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/tapDashX1</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/statusUnitText</item>
        <item name="android:textSize">@dimen/textDashH1.5</item>
        <item name="android:visibility">gone</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CategoryItemSelect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/cateDashHeight</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textDashH1</item>
        <item name="android:text">@string/aqi</item>
        <item name="android:background">@drawable/category_text_outline</item>
    </style>

    <style name="CategoryItemNoSelect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/cateDashHeight</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:layout_marginStart">@dimen/iconDashSize</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/category_nontext_outline</item>
        <item name="android:textColor">@color/lineChartCategoryNonSelectText</item>
        <item name="android:textSize">@dimen/textDashH1</item>
    </style>

    <style name="DashLinearGraph">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textDashH0.5</item>
    </style>

    <style name="MenuFanItem">
        <item name="android:layout_width">@dimen/conFanMenuSize</item>
        <item name="android:layout_height">@dimen/conFanMenuSize</item>
        <item name="android:background">@drawable/side_menu_nofan_tv_bg</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/side_0.8_white</item>
        <item name="android:textSize">@dimen/textDashH3</item>
    </style>

    <style name="MenuProductInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:textColor">@color/side_0.8_white</item>
        <item name="android:textSize">@dimen/textDashH2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PermissionCard">
        <item name="android:layout_width">@dimen/itemPermWidth</item>
        <item name="android:layout_height">@dimen/itemPermHeight</item>
        <item name="android:background">@drawable/permission_outline</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>


</resources>